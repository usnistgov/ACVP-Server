{
  "ConnectionStrings": {
    "ACVPPublic": "data source=ACVP-MSSQL-DEMO; initial catalog=ACVPPublic; Integrated Security=true; Connection Timeout=120; Max Pool Size=2048;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft.AspNetCore.Authentication.JwtBearer.JwtBearerHandler": "Fatal",
        "Microsoft.AspNetCore.Diagnostics.ExceptionHandlerMiddleware": "Fatal",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\ACVP.NET_Logs\\WebPublic.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "WebPublic"
    }
  },
  "MtlsConfig": {
    "CaSubjectKeyId": "1c2dd7e71287c03791dc0e3e4cc91f7796666ec6"
  },
  "Totp": {
    "IncludeTotpControllerAccess": true,
    "Step": 30,
    "EnforceUniqueness": true,
    "Digits": 8,
    "Hmac": "SHA256"
  },
  "Algorithm": {
    "AllowCaching": true
  },
  "Jwt": {
    "Issuer": "NIST ACVP DEMO",
    "ValidWindowHours": 0,
    "ValidWindowMinutes": 30,
    "ValidWindowSeconds": 0,
    "FriendlySignatureScheme": "HmacSha256"
  },
  "VectorSet": {
    "AllowResubmission": true,
    "AllowIsSample": true
  },
  "TestSession": {
    "TestSessionExpirationAgeInDays": 30
  },
  "AllowedHosts": "*"
}
  
