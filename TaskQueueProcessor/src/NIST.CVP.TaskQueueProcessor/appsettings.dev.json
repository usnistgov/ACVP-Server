{
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\ACVP.NET_Logs\\TaskQueueProcessor.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{VsID}) {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext"],
    "Properties": {
      "Application": "TaskQueueProcessor"
    }
  },
  "TaskQueueProcessorConfig": {
    "PollDelay": 5,
    "MaxConcurrency": 4
  },
  "AllowedHosts": "*"
}
  