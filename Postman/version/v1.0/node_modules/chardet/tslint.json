{
  "extends": "tslint:recommended",
  "rules": {
    "interface-name": [true, "never-prefix"],
    "quotemark": [true, "single"],
    "no-bitwise": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "object-literal-sort-keys": false,
		"radix": false,
		"forin": false
  }
}
